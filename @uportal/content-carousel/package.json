{
  "name": "@uportal/content-carousel",
  "description": "Display portlet content in a browsable carousel",
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ChristianMurphy/uPortal-components.git"
  },
  "keywords": ["apereo", "uportal", "content", "carousel", "browse", "list"],
  "author": "Apereo <uportal-dev@apereo.org>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/ChristianMurphy/uPortal-components/issues"
  },
  "homepage": "https://christianmurphy.github.io/uPortal-components/",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "start": "vue-cli-service serve",
    "build": "vue-cli-service build --name content-carousel --target wc"
  },
  "dependencies": {
    "vue": "^2.5.13",
    "vue-carousel": "^0.7.1"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.0.0-beta.6",
    "@vue/cli-plugin-eslint": "^3.0.0-beta.6",
    "@vue/cli-service": "^3.0.0-beta.6",
    "vue-template-compiler": "^2.5.13"
  },
  "babel": {
    "presets": ["@vue/app"]
  },
  "eslintConfig": {
    "extends": ["plugin:vue/essential"]
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": ["> 1%", "last 2 versions", "not ie <= 8"]
}
