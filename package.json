{
  "private": true,
  "devDependencies": {
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.0.0",
    "@commitlint/travis-cli": "^7.2.1",
    "@mapbox/stylelint-processor-arbitrary-tags": "^0.2.0",
    "@vue/eslint-config-prettier": "^3.0.3",
    "babel-eslint": "^10.0.0",
    "eslint": "^5.7.0",
    "eslint-config-google": "^0.11.0",
    "eslint-config-react-app": "^3.0.4",
    "eslint-plugin-flowtype": "^3.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.11.1",
    "eslint-plugin-vue": "^5.0.0-beta.3",
    "lerna": "^3.4.0",
    "lerna-webjar": "^1.0.0",
    "lint-staged": "^7.3.0",
    "npm-run-all": "^4.1.2",
    "prettier-eslint-cli": "^4.7.1",
    "prettier-stylelint": "^0.4.2",
    "remark-cli": "^5.0.0",
    "remark-preset-lint-recommended": "^3.0.1",
    "remark-validate-links": "^7.1.0",
    "stylelint": "^9.5.0",
    "stylelint-config-standard": "^18.2.0",
    "tslint": "^5.11.0",
    "typescript": "^3.1.3",
    "yorkie": "^2.0.0"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap --ci",
    "build": "lerna run build",
    "ci:commitlint": "commitlint-travis",
    "format": "npm-run-all format:*",
    "format:js": "prettier-eslint --write '**/*.{js,vue}'",
    "format:ts": "tslint -c tslint.json --fix '**/*.ts'",
    "format:md": "prettier --write '**/*.md'",
    "format:css": "prettier-stylelint --write '**/*.css'",
    "lint": "npm-run-all lint:*",
    "lint:js": "eslint --ext vue .",
    "lint:ts": "tslint -c tslint.json '**/*.ts'",
    "lint:css": "stylelint '**/*.{css,scss,vue}'",
    "lint:md": "remark --frail '*.md' 'docs/**/*.md' '@uportal/*/*.md'",
    "start": "lerna run start",
    "test": "npm-run-all test:* lint:*",
    "test:packages": "lerna run test",
    "publish-webjar": "lerna-webjar"
  },
  "workspaces": [
    "@uportal/*"
  ],
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "eslintConfig": {
    "root": true,
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "extends": [
      "react-app",
      "plugin:vue/strongly-recommended",
      "eslint:recommended",
      "google"
    ],
    "env": {
      "node": true,
      "browser": true,
      "es6": true
    },
    "rules": {
      "no-invalid-this": "off",
      "require-jsdoc": "off",
      "max-len": "off",
      "no-console": "warn",
      "vue/html-closing-bracket-newline": "warn"
    }
  },
  "prettier": {
    "singleQuote": true
  },
  "gitHooks": {
    "commit-msg": "commitlint -e",
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,vue}": [
      "prettier-eslint --write",
      "git add"
    ],
    "*.ts": [
      "tslint -c tslint.json --fix",
      "git add"
    ],
    "*.{css,scss}": [
      "prettier-stylelint --write",
      "git add"
    ],
    "*.{md,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "stylelint": {
    "processors": [
      "@mapbox/stylelint-processor-arbitrary-tags"
    ],
    "extends": "stylelint-config-standard",
    "rules": {
      "no-empty-source": null,
      "no-descending-specificity": null
    }
  },
  "remarkConfig": {
    "plugins": [
      "preset-lint-recommended",
      "validate-links",
      [
        "remark-lint-list-item-indent",
        false
      ]
    ]
  },
  "renovate": {
    "extends": [
      "schedule:weekly",
      "group:all",
      ":rebaseStalePrs",
      ":preserveSemverRanges",
      ":semanticPrefixChore",
      ":ignoreUnstable",
      ":renovatePrefix"
    ]
  },
  "engines": {
    "node": "^10.9.0",
    "npm": "^6.3.0"
  },
  "dependencies": {}
}
